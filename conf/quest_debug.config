/*
    Quest Configuration
*/

process {

    container = 'docker://andersenlab/gatk4:latest'
    // container = 'docker://andersenlab/wi-gatk:v2.1'
    
    withLabel: xs {
        cpus = 2
        memory = 2.GB
    }

    withLabel: sm {
        cpus = 2
        memory = 4.GB
    }

    withLabel: md {
        cpus = 2
        memory = 4.GB
    }

    withLabel: lg {
        cpus = 2
        memory = 4.GB
    }

    withLabel: xl {
        cpus = 2
        memory = 4.GB
    }

    withLabel: R {
        container = 'docker://andersenlab/r_packages:latest'
    }

}

params {

    debug="true"
	
    /* Adjust these parameters to set the reference genome */
    reference_base = "/projects/b1059/data/"
    species="c_elegans"
    project="PRJNA13758"
	ws_build="WS276"
	
    /* Keep these static ~ They should not need to be updated */
    reference_dir = "${reference_base}/${species}/genomes/${project}/${ws_build}"
    reference = "${reference_dir}/${species}.${project}.${ws_build}.genome.fa.gz"

    bam_location = ""


}

executor {
    queueSize=500
    submitRateLimit=10
}

singularity {

    enabled = true
    autoMounts = true

    cacheDir = "/projects/b1059/singularity/"
}

