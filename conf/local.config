
/*
    LOCAL

    For running the pipeline locally
*/

process {

    withLabel: xs {
        cpus = 2
        memory = 1.GB
    }

    withLabel: sm {
        cpus = 2
        memory = 2.GB
    }

    withLabel: md {
        cpus = 4
        memory = 2.GB
    }

    withLabel: lg {
        cpus = 4
        memory = 2.GB
    }

    withLabel: xl {
        cpus = 4
        memory = 4.GB
    }

}

params {
    debug = true

    //gff = "/${base_input_dir}bin/ce.gff3.gz"
    // variant filters
    missing = 0.95
    annotation_reference = "WS263"

    min_depth = 2 // originally =5
    qual = 30.0
    strand_odds_ratio = 5.0
    dv_dp = 0.5
    quality_by_depth = 5.0
    fisherstrand = 50.0
    readbias = -5.0

}