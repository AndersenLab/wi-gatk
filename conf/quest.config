/*
    Quest Configuration
*/

process {

    container = 'docker://andersenlab/gatk4:latest'
    // container = 'docker://andersenlab/wi-gatk:v2.1'


    withLabel: xs {
        cpus = 1
        memory = 1.GB
    }

    withLabel: sm {
        cpus = 1
        memory = 4.GB
    }

    withLabel: md {
        cpus = 2
        memory = 8.GB
    }

    withLabel: lg {
        cpus = 4
        memory = 16.GB

    }

    withLabel: xl {
        cpus = 4
        memory = 16.GB

        executor = 'slurm'
        queue = 'b1059'
        clusterOptions = '-A b1059 -t 14-00:00:00 -e errlog.txt'
    }

    withLabel: R {
        container = 'docker://andersenlab/r_packages:v0.3'
    }

    errorStrategy='retry'
    maxRetries=3

}

params {
	
    /* Adjust these parameters to set the reference genome */
 //    reference_base = "/projects/b1059/data/genomes"
 //    species="c_elegans"
 //    project="PRJNA13758"
	// ws_build="WS276"
	
 //     Keep these static ~ They should not need to be updated 
 //    reference_dir = "${reference_base}/${species}/${project}/${ws_build}"
 //    reference = "${reference_dir}/${species}.${project}.${ws_build}.genome.fa.gz"


}

executor {
    queueSize=500
    submitRateLimit=10
}

singularity {

    enabled = true
    autoMounts = true

    cacheDir = "/projects/b1059/singularity"
}

